/* Safana, Larriaz The Sirine - BG Harbor */
IF %BGT_VAR%
Dead("larria")
Global("X#SLTSBGH","GLOBAL",0)
InParty(Myself)
!StateCheck(Myself,CD_STATE_NOTVALID)
InMyArea(Player1)
!StateCheck(Player1,CD_STATE_NOTVALID)
CombatCounter(0)
!See([ENEMY])
THEN
RESPONSE #100
SetGlobal("X#SLTSBGH","GLOBAL",1)
END

