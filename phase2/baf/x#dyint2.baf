/* Activate Dynaheir Firewine */
IF %BGT_VAR%
AreaCheck("%FirewineBridge%")
Global("X#DYINT1","GLOBAL",0)
InParty(Myself)
!StateCheck(Myself,CD_STATE_NOTVALID)
InMyArea(Player1)
!StateCheck(Player1,CD_STATE_NOTVALID)
CombatCounter(0)
!See([ENEMY])
THEN
RESPONSE #100
SetGlobal("X#DYINT1","GLOBAL",1)
END

